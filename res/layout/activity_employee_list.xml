<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<fragment
			android:name="org.ff.sunlineoaclient.activity.EmployeeListFragment"
			android:id="@+id/employeeListFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/test_bottom_buttons"/>
	<!-- Button 置底 -->
	<LinearLayout
			android:id="@+id/test_bottom_buttons"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignParentBottom="true">

		<Button
				android:id="@+id/update"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="获取最新通讯录"></Button>
	</LinearLayout>
</RelativeLayout>